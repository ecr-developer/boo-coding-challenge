<configuration>
  <appender name="DEV" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %3p ${hostName} --- [ServiceName: user-service] --- [%15.15t] %-40.40c{1.}: %m%n%ex</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="DEV" />
  </root>
</configuration>